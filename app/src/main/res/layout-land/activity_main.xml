<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    android:shrinkColumns="0"
    android:stretchColumns="*"
    android:weightSum="1.2"
    >

    <TableRow android:layout_weight="0.2"
        android:weightSum="1"
        >

        <TextView
            android:layout_weight="0.3"
            android:layout_width="0dip"
            android:id="@+id/tViewNombreH"
            android:text="Nombre"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:layout_weight="0.7"
            android:layout_width="0dip"
            android:id="@+id/eTextNombreH"
            android:ems="10"
            android:hint="Introduce tu nombre"
            android:inputType="textPersonName"
            android:textAlignment="center" />

    </TableRow>

    <TableRow
        android:layout_weight="0.2">

        <TextView
            android:layout_weight="0.3"
            android:layout_width="0dip"
            android:id="@+id/tViewEdadH"
            android:text="Edad"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:layout_weight="0.7"
            android:id="@+id/eTextEdadH"
            android:layout_width="0dip"
            android:ems="10"
            android:hint="Introduce tu edad"
            android:inputType="textPersonName"
            android:textAlignment="center" />
    </TableRow>

    <TableRow
        android:layout_weight="0.2">

        <TextView
            android:layout_weight="0.3"
            android:id="@+id/tViewSexoH"
            android:layout_width="0dip"
            android:text="Sexo"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:layout_weight="0.35"
            android:id="@+id/tViewFumasH"
            android:layout_width="0dip"
            android:text="¿Fumas?"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tViewBebesH"
            android:layout_weight="0.35"
            android:layout_width="0dip"
            android:text="¿Bebes?"
            android:textAlignment="center"
            android:textSize="18sp" />

    </TableRow>

    <TableRow
        android:layout_weight="0.2">

        <Spinner
            android:layout_weight="0.3"
            android:id="@+id/spinnerSexoH"
            android:layout_width="0dip"></Spinner>

        <RadioGroup
            android:layout_width="0dip"
            android:layout_weight="0.35"
            android:orientation="horizontal">

            <RadioButton
                android:text="Si"
                android:layoutDirection="rtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonYH"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="?android:attr/textColorTertiary"
                android:textAlignment="textEnd" />

            <RadioButton

                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonNH"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textColor="?android:attr/textColorTertiary" />
        </RadioGroup>

        <Spinner
            android:layout_weight="0.35"
            android:id="@+id/spinnerBebesH"
            android:layout_width="0dip"/>

    </TableRow>

    <TableRow
        android:layout_weight="0.2">

        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dip"
            android:id="@+id/tViewKlingonH"
            android:text="¿Que tal se te da el lenguaje Klingon?"
            android:textSize="18sp"
            android:textAlignment="textEnd" />

        <CheckBox
            android:layout_weight="0.5"
            android:layout_width="0dip"
            android:id="@+id/checkBoxKlingonH"
            android:text="Es mi lengua materna!"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="18sp" />
    </TableRow>

    <TableRow android:layout_weight="0.2">

        <Button
            android:layout_width="0dip"
            android:id="@+id/calculaH"
            android:text="Calcula"
            android:layout_weight="1" />

    </TableRow>

</TableLayout>